@page
@model BooksListRazor.Pages.BooksList.IndexModel
@{
    ViewData["Title"] = "Index";
}

<br />
<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">Books List</h2>
    </div>
    <div class="col-3">
        <a asp-page="Create" class="btn btn-info form-control text-white">Create New Book</a>
    </div>

    <div class="col-12 p-3 mt-3">

        @if (Model.Books.Count() > 0)
        {
            <form method="post">
                <table class="table table-striped border">
                    <tr>
                        <th>
                            <label asp-for="Books.FirstOrDefault().Name"></label>
                        </th>

                        <th>
                            <label asp-for="Books.FirstOrDefault().Author"></label>
                        </th>
                        <th>
                            <label asp-for="Books.FirstOrDefault().ISBN"></label>
                        </th>
                        <th>

                        </th>

                    </tr>

                    @foreach (var item in Model.Books)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m=> item.Name)

                            </td>
                            <td>
                                @Html.DisplayFor(m=> item.Author)

                            </td>
                            <td>
                                @Html.DisplayFor(m=> item.ISBN)

                            </td>
                            <td>
                                <button asp-route-id="@item.Id" asp-page-handler="Delete" onclick="return confirm('Are You sure About Deleting This Book!')" class="btn btn-danger">Delete</button>
                                <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-success text-white">Edit</a>
                            </td>
                        </tr>
                    }

                </table>
            </form>
        }
        else
        {
            <p class="text-danger">No Book Available</p>
        }
    </div>

</div>
